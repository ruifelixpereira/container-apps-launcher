<div id="container">

  <form name="setfeatureflag" action="/featureflag/set" method="post"></form>
  <form name="clearfeatureflag" action="/featureflag/clear" method="post"></form>

  <form id="form" name="form" action="/" method="post">

    <div id="logo">{{ title }}</div>
    
    <div id="form">

      <label for="instances">Instances #</label>
      <input type="number" name={{ instancesLabel }} value="{{ instancesCount }}" id="instances" onkeyup="send()" />
      <p/>
      <button name="incButton" value="{{ instancesLabel }}" onclick="send()" class="button button1">Launch</button>
      <div id="results"> {{ analytics }} </div> 
    </div>
      
    <div id="footer">
      {{#if showDetails.isEnabled }}
      host: {{ showDetails.hostName }}<br/>
      store: redis<br/>
      {{/if}}
      {{#if featureFlag.isEnabled }}
      feature flag: {{#if featureFlag.isSet }}set{{else}}<a href="#" onclick="document.setfeatureflag.submit();">set</a>{{/if}} | {{#if featureFlag.isSet }}<a href="#" onclick="document.clearfeatureflag.submit();">clear</a>{{else}}clear{{/if}}
      {{/if}}
    </div>

  </form>
    
</div>     